#include <Wire.h>

#include <Servo.h>

#include <Smartcar.h>

Gyroscope gyro;
Car car;
SR04 SonarSensor;
const int TRIGGER_PIN = 6; //D6
const int ECHO_PIN = 5; //D5

boolean drive = true;

void setup() {
    gyro.attach();
    gyro.begin();
    car.begin(gyro);
    SonarSensor.attach(TRIGGER_PIN, ECHO_PIN);
    Serial.begin(9600);
    car.setSpeed(30);
  drive = true;
}

void loop(){
    unsigned int distance = SonarSensor.getDistance();
    if (distance <= 15 && distance >0){
        car.setSpeed(0);
        delay(100);
        drive = false;
    }
    if(drive = false){
      car.setSpeed(0);
      
    }
    
    
}
